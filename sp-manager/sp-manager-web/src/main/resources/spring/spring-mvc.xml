<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:mvc="http://www.springframework.org/schema/mvc"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                http://www.springframework.org/schema/beans/spring-beans.xsd
                http://www.springframework.org/schema/context
                http://www.springframework.org/schema/context/spring-context.xsd http://www.springframework.org/schema/mvc http://www.springframework.org/schema/mvc/spring-mvc.xsd">
    <!--1 扫描web层下的注解类-->
    <context:component-scan base-package="com.qtec.snmp.web"/>
    <!--2 mvc的注解驱动-->
    <!--@RequestMapping @ResponseBody @RequestParam jackson Object转成json-->
    <mvc:annotation-driven/>

    <!--3 添加视图解析器-->
    <!--比如： return "index";   /WEB-INF/jsp/index_snmp.jsp-->
    <bean class="org.springframework.web.servlet.view.InternalResourceViewResolver">
        <!--前缀-->
        <property name="prefix" value="/WEB-INF/jsp/"/>
        <!--后缀-->
        <property name="suffix" value=".jsp"/>
    </bean>

    <!--4 静态资源解析（静态资源放行）-->
    <!--js文件-->
    <mvc:resources mapping="/js/**" location="/js/"/>
    <!--css样式表文件-->
    <mvc:resources mapping="/css/**" location="/css/"/>
    <!--图片文件-->
    <mvc:resources mapping="/images/**" location="/images/"/>
    <!--txt文件-->
    <mvc:resources mapping="/html/**" location="/html/"/>
    <!--拦截器配置-->
    <mvc:interceptors>
        <mvc:interceptor>
            <!-- 需拦截的地址 -->
            <mvc:mapping path="/*" />
            <!-- 需排除拦截的地址 -->
            <mvc:exclude-mapping path="/login"/>
            <mvc:exclude-mapping path="/loginUser"/>
            <bean class="com.qtec.snmp.web.interceptor.LoginInterceptor" />
        </mvc:interceptor>
    </mvc:interceptors>
</beans>